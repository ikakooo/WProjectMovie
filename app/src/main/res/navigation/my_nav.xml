<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/movieListFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.movieapp.fragments.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_editMovie"
            app:destination="@id/editMovie" />
    </fragment>
    <fragment
        android:id="@+id/editMovie"
        android:name="com.example.movieapp.fragments.EditMovie"
        android:label="fragment_edit_movie"
        tools:layout="@layout/fragment_edit_movie" >
        <action
            android:id="@+id/action_editMovie_to_movieListFragment"
            app:destination="@id/movieListFragment" />
        <argument
            android:name="currentMovie"
            app:argType="com.example.movieapp.network.Result" />
    </fragment>
</navigation>